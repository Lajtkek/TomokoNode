generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id
  username String

  reactionCounts UserReactionCount[]

  reactedTo UserReaction[] @relation(name: "reactTarget")
  reactedBy UserReaction[] @relation(name: "reactor")

  ownedReminders Reminder[] @relation(name: "reminderOwner")

  reminders ReminderRecipient[]

  helperScore Int @default(0)
}

model UserReaction {
  id        BigInt   @id @default(autoincrement())
  emojiName String
  createdAt DateTime @default(now())

  reactor   User   @relation(name: "reactor", fields: [idReactor], references: [id])
  idReactor String

  reactTarget   User   @relation(name: "reactTarget", fields: [idReactTarget], references: [id])
  idReactTarget String

  reactionCounter   UserReactionCount @relation(fields: [idReactionCounter], references: [id])
  idReactionCounter BigInt

  @@unique([idReactor, idReactTarget, emojiName])
}

model UserReactionCount {
  id BigInt @id @default(autoincrement())

  owner  User   @relation(fields: [idUser], references: [id])
  idUser String

  emojiName String
  count     Int    @default(0)

  reactionRecord UserReaction[]

  @@unique([idUser, emojiName])
}

model Reminder {
  id BigInt @id @default(autoincrement())

  owner   User   @relation(name: "reminderOwner", fields: [idOwner], references: [id])
  idOwner String

  recipients ReminderRecipient[]

  description String
}

model ReminderRecipient {
  reminder   Reminder @relation(fields: [reminderId], references: [id])
  reminderId BigInt

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@id([reminderId, userId])
}
